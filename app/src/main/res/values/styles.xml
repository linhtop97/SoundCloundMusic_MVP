<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sc.theme.colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/sc.theme.colorPrimaryDark</item>
        <item name="colorAccent">@color/sc.theme.colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/sc.theme.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/sc.theme.textColorPrimary</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@color/sc.theme.colorControlActivated</item>
        <item name="colorControlHighlight">@color/sc.theme.colorControlHighlight</item>
    </style>

    <style name="SC.Theme" parent="AppTheme" />

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <!-- Widget -->

    <style name="SC.Theme.Widget" />


    <style name="SC.Theme.Widget.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/sc.theme.textColorPrimary</item>
        <item name="android:textAppearance">@style/SC.Theme.TextAppearance.Light.Toolbar.Title
        </item>
        <item name="android:textColorSecondary">@color/sc.theme.textColorSecondary</item>
        <item name="android:id">@id/toolbar</item>
    </style>

    <style name="SC.Theme.TextAppearance">
        <item name="fontPath">@string/mp.font.roboto.monospace.regular</item>
    </style>

    <style name="SC.Theme.TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SC.Theme.TextAppearance.Light.Toolbar.Title" parent="SC.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/sc.theme.colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
